<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="@dimen/y200"
    android:layout_margin="@dimen/x10">

    <RelativeLayout
        android:id="@+id/rl_create_line"
        android:layout_marginHorizontal="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/y20"
        android:background="@drawable/bg_create">

        <ImageView
            android:src="@mipmap/create"
            android:layout_marginTop="@dimen/y40"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_centerHorizontal="true">

        </ImageView>

        <TextView
            android:layout_marginBottom="@dimen/y40"
            android:layout_alignParentBottom="true"
            android:text="@string/Create_route"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>

</FrameLayout>